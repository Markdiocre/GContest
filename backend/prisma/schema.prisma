model Question {
  id      Int      @id @default(autoincrement())
  content String
  score   Int
  choice  Choice[]
  answer  Answer[]
  Quiz    Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId  Int
}

model Choice {
  id         Int       @id @default(autoincrement())
  content    String
  is_correct Boolean
  answer     Answer[]
  Question   Question? @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId Int
}
